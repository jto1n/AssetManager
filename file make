PROJECTNAME = assetLibrary
OUTPUT_DIR = build

INCLUDE_DIRS =-ISDL2
LIB_DIRS = -Llib

LIBS = -lSDL2Mmain -lSDL2 -ldl



SRC = $(wildcard src/*.cpp) $(wildcard lib/imgui/*.cpp)

default: $(wildcard lib/imgui/*.cpp)
	g++ $(SRC) -o $(OUTPUT_DIR)/$(PROJECTNAME) $(INCLUDE_DIRS) $(LIB_DIRS) $(LIBS)

clean: 
	rm -f $(EXE) $(OBJS)